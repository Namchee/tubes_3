<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            app:iconifiedByDefault="false"
            app:defaultQueryHint="@string/search_hint"
            android:queryHint="@string/search_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </Toolbar>
    <RelativeLayout
        android:padding="@dimen/medium_padding"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="0 manga(s)"
            android:id="@+id/page_sum"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:labelFor="@id/sort_category"
                android:text="@string/sort_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/sort_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <GridView
        android:paddingLeft="@dimen/small_padding"
        android:paddingRight="@dimen/small_padding"
        android:id="@+id/manga_list"
        android:gravity="center"
        android:columnWidth="@dimen/manga_column_width"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/manga_view_spacing"
        android:horizontalSpacing="@dimen/manga_view_spacing"
        android:stretchMode="columnWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress_loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:padding="108dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible" />
</LinearLayout>